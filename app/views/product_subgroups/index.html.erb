<p id="notice"><%= notice %></p>

<h1>Product Subgroups</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Product group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_subgroups.each do |product_subgroup| %>
      <tr>
        <td><%= product_subgroup.description %></td>
        <td><%= product_subgroup.product_group %></td>
        <td><%= link_to 'Show', product_subgroup %></td>
        <td><%= link_to 'Edit', edit_product_subgroup_path(product_subgroup) %></td>
        <td><%= link_to 'Destroy', product_subgroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

